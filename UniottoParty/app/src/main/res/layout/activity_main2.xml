<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mogamusa.uniottoparty.MainActivity">

    <RelativeLayout
        android:id="@+id/fullscreen_content2"
        android:layout_width="376dp"
        android:layout_height="690dp"
        android:layout_marginTop="2dp"
        app:layout_constraintHorizontal_bias="0.625"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button6"
            android:layout_alignBottom="@+id/button6"
            android:layout_alignEnd="@+id/seekBar"
            android:text="Next"
            tools:layout_editor_absoluteX="212dp"
            tools:layout_editor_absoluteY="148dp" />

        <Button
            android:id="@+id/butpause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/startmu"
            android:layout_alignBottom="@+id/startmu"
            android:layout_alignStart="@+id/button4"
            android:text="Pause"
            tools:layout_editor_absoluteX="36dp"
            tools:layout_editor_absoluteY="343dp" />

        <Button
            android:id="@+id/button_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/startmu"
            android:layout_marginEnd="17dp"
            android:layout_marginTop="11dp"
            android:layout_toStartOf="@+id/button6"
            android:text="Play" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button_create"
            android:layout_alignBottom="@+id/button_create"
            android:layout_centerHorizontal="true"
            android:text="Rewind" />

        <Button
            android:id="@+id/startmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/button6"
            android:layout_marginTop="75dp"
            android:text="Start" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp" />

        <Button
            android:id="@+id/seekBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView8"
            android:layout_below="@+id/seekBar"
            android:text="Seek" />

        <ListView
            android:id="@+id/reserveView"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_alignStart="@+id/seekBar"
            android:layout_below="@+id/textView3" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView9"
            android:text="推薦曲リスト"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:text="次のターン："
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="11dp"
            android:text="現在のターン："
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/textView5"
            android:text="不明"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_toEndOf="@+id/textView6"
            android:text="不明"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/seekBut"
            android:layout_marginTop="11dp"
            android:text="選択曲："
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:text="未選択"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button_segue2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView8"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentEnd="true"
            android:text="ログアウト" />

        <ListView
            android:id="@+id/listView3"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/reserveView"
            android:layout_below="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/reserveView"
            android:text="APIによる推薦曲リスト"
            android:textSize="24sp" />

        <Button
            android:id="@+id/api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_create"
            android:layout_alignStart="@+id/button_create"
            android:text="API" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
